
@model Ecommerce.Models.CategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Categoría</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Category" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i></button>
                <a asp-action="Index" class="btn btn-success "><i class="glyphicon glyphicon-chevron-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


